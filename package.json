{
  "name": "squishy-text",
  "version": "0.1.0",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "purge": "rimraf ./node_modules",
    "steal:build": "steal-tools build --target web optimize  --no-tree-shaking",
    "steal:bundle": "steal-tools bundle  --no-tree-shaking",
    "build": "tsc -P tsconfig.browser.json",
    "steal:reload": "steal-tools live-reload",
    "steal:export": "steal-tools export   --global --no-tree-shaking --dest build",
    "serve": "http-server  --cors -c-1",
    "dev": "concurrently \"pnpm serve\" \"pnpm steal:reload\""
  },
  "steal": {
    "baseURL": "./",
    "main": "src/main.ts!steal-typescript",
    "ext": {
      "ts": "steal-typescript"
    },
    "meta": {
      "typescript": {
        "format": "global",
        "exports": "ts"
      },
      "map": {
        "dat.gui": "node_modules/dat.gui/build/dat.gui.module.js",
        "mime": "node_modules/mime/lite.js"
      },
      "plugins": [
        "steal-typescript",
        "steal-css"
      ],
      "configDependencies": [
        "live-reload"
      ]
    },
    "keywords": [],
    "author": "Nnamdi Michael Okpala",
    "license": "ISC",
    "devDependencies": {
      "mime": "^3.0.0",
      "steal-css": "^1.3.2",
      "steal-tools": "^2.3.0",
      "steal-typescript": "^0.5.0",
      "typescript": "^5.0.4",
      "object-assign": "^4.1.1"
    },
    "dependencies": {
      "dat.gui": "^0.7.9",
      "http-server": "^14.1.1",
      "steal": "^2.3.0"
    }
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "object-assign": "^4.1.1",
    "rimraf": "^5.0.0",
    "steal-tools": "^2.3.0",
    "steal-typescript": "^0.5.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "http-server": "^14.1.1",
    "steal": "^2.3.0"
  }
}